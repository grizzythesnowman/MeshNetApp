<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TransmitResultActivity"
    android:id="@+id/transmitPrepareActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="25dp"
            android:textSize="28dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/cardview_light_background"
            app:cardCornerRadius="8dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sender Node"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/lblSenderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sender"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/lblSenderMac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XX:XX:XX:XX:XX:XX:XX"
                        android:textSize="12dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receiver Node"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/lblReceiverName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Receiver"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/lblReceiverMac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XX:XX:XX:XX:XX:XX:XX"
                        android:textSize="12dp"/>

                </LinearLayout>

            </GridLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/cardview_light_background"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/lblMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Message contents goes here"
                    android:textSize="20dp"
                    android:layout_marginBottom="5dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:useDefaultMargins="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delay"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/lblDelay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 ms"
                            android:textSize="22dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bit Size"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/lblBitSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 bit(s)"
                            android:textSize="22dp"/>

                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Done"
            android:textAllCaps="false"
            android:textSize="18dp" />

    </GridLayout>

</LinearLayout>